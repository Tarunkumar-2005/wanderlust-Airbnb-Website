<% layout("/layouts/boilerPlate.ejs") %>
<style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
        }
        .filter {
            text-align: center;
            margin-right: 1rem;
            margin-top: 0.5rem;
            opacity: 0.7;
        }
        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }
        .filter p{
            font-size: 0.8rem;

        }
        .tax-toggle{
            border: 1px solid lightgrey;
            border-radius: 1rem;
            padding: 0.3rem 0.6rem;
            margin-left: auto;
            margin-right: 1rem;
            font-size: 0.8rem;
            
        }
        .tax-info{
            font-size: 0.8rem;
            display: none;
        }
</style>
<body>
    <div id="filters"> 
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Mountain cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-house"></i>
            <p>Cabins</p>
        </div> 
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault" >Display total after taxes</label>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cold-sm-1 mt-1"> 
        
        <% for(let list of allListings ){ %>
            <a href="/listings/<%= list._id %>" class="listing-link">
            <div class="listing-card card" >
                <img src="<%= list.image.url %>" class="card-img-top" style="height: 20rem;" alt="image">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= list.title %></b> 
                        <br>
                        <%= list.price.toLocaleString("en-IN") %>/night
                        <i class="tax-info">&nbsp; +18% GST</i>
                    </p>
                </div>
            </div>
            </a>
        <% } %>
    </div>
    <script>
        let taxSwitch = document.getElementById('flexSwitchCheckDefault');
        taxSwitch.addEventListener('click', function() {
            let taxInfo = document.getElementsByClassName('tax-info');
            for (info of taxInfo) {
                if (info.style.display === "inline") info.style.display = "none";
                else
                    info.style.display = "inline";
            }
        });
    </script>
</body>

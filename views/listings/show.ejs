<% layout("/layouts/boilerPlate.ejs") %>

<div class="container mt-4">
  <div class="row justify-content-center mb-3">
    <div class="col-md-8 text-center">
      <h1><%= list.title %></h1>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card show-card listing-card" style="width: 100%;">
        <img src="<%= list.image.url %>" class="card-img-top" alt="image">
        <div class="card-body">
          <p class="card-text">
            <i>Owned by <%= list.owner.username %></i><br>
            <%= list.description %><br>
            &#8377; <%= list.price.toLocaleString("en-IN") %><br>
            <%= list.location %><br>
            <%= list.country %><br>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <% if(currUser && list.owner.equals(currUser._id)) { %>
    <div class="col-auto">
      <a href="/listings/<%= list._id %>/edit" class="btn edit-btn">Edit</a>
    </div>
    <div class="col-auto">
      <form method="POST" action="/listings/<%= list._id %>?_method=DELETE" onsubmit="return confirmDelete()">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
    <% } %>

    <div>
      <% if(currUser) { %>
      <hr>
      <h2 >Leave your Review</h2>

      <form action="/listings/<%= list._id %>/reviews" method="POST" novalidate class="needs-validation">
      <div >
        <label for="rating" class="form-label">Rating</label>
        <br>
          <fieldset class="starability-fade">
            <input type="radio" id="rate5" name="review[rating]" value="5" />
            <label for="rate5"></label>
            <input type="radio" id="rate4" name="review[rating]" value="4" />
            <label for="rate4"></label>
            <input type="radio" id="rate3" name="review[rating]" value="3" />
            <label for="rate3"></label>
            <input type="radio" id="rate2" name="review[rating]" value="2" />
            <label for="rate2"></label>
            <input type="radio" id="rate1" name="review[rating]" value="1" class="input-no-rate" checked aria-label="No rating"/>
            <label for="rate1"></label>
            
        </fieldset>
      </div>

  <div>
    <label for="comment" class="form-label">Comment</label><br>
    <textarea required id="comment" name="review[comment]" class="form-control"></textarea>
    <div class="invalid-feedback">Please enter a comment for review.</div>
  </div>
  <br>
  <button class="btn btn-outline-dark">Submit</button>
</form>

      <% } %>

      <% if(list.reviews.length>0){ %>
      <hr>
      <h4 class="text-center" style="color: blue;">All Reviews</h4>
      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(review of list.reviews) { %>
    <div class="col mb-3">
        <div class="card mb-2">
            <div class="card-body">
                <h5 class="card-title text-center">@<%= review.author.username %></h5>
                
                <div class="d-flex justify-content-center mb-2">
                  <p class="starability-result text-center card-text" style="--rating: <%= review.rating %>;"></p>
                </div>
                <p class="card-text text-center mb-2"><%= review.comment %></p>
            </div>
            <form action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" onsubmit="return confirmDelete()" class="mb-2 text-center">
                <button class="btn btn-sm btn-dark">Delete</button>
            </form>
        </div>
    </div>
    <% } %>
</div>
      <% } %>
    </div>
  </div>
</div>

<br>

<script>
  function confirmDelete() {
    return confirm("Are you sure you want to delete this listing?");
  }
</script>

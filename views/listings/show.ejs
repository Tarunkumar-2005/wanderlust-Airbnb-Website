<% layout("/layouts/boilerPlate.ejs") %>

<div class="container mt-4">
  <div class="row justify-content-center mb-3">
    <div class="col-md-8 text-center">
      <h1>Listing Details:</h1>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card show-card" style="width: 100%;">
        <img src="<%= list.image %>" class="card-img-top" alt="image">
        <div class="card-body">
          <p class="card-text">
            <strong><%= list.title %></strong><br>
            <%= list.description %><br>
            &#8377; <%= list.price.toLocaleString("en-IN") %><br>
            <%= list.location %><br>
            <%= list.country %><br>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-auto">
      <a href="/listings/<%= list._id %>/edit" class="btn edit-btn">Edit</a>
    </div>
    <div class="col-auto">
      <form method="POST" action="/listings/<%= list._id %>?_method=DELETE" onsubmit="return confirmDelete()">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
  </div>
</div>
<br>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this listing?");
    }
</script>


